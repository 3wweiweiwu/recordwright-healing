    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\bin\\www"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debuge Mocha",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "./test/**/spec.*.js", 
                "--exit"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debuge Mocha Snapshot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "./test/**/snapshot/spec.*.js", 
                "--exit"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debuge Mocha PugGenerator",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "./test/**/pugGenerator/spec.*.js", 
                "--exit"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debuge Mocha Integration",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "./test/**/integration/spec.*.js", 
                "--exit"
            ],
        }
    ]
}